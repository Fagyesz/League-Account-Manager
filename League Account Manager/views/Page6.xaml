<Page x:Class="League_Account_Manager.views.Page6"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page6">

    <Grid>
        <ui:Button Click="Button_Click" ContentControl.Content="Report player" FrameworkElement.Margin="10,10,0,0"
                   FrameworkElement.VerticalAlignment="Top" FrameworkElement.Height="40" FrameworkElement.Width="151" />
        <ui:TextBox Name="playername" HorizontalAlignment="Left" Margin="198,15,0,0" TextWrapping="Wrap"
                    Text="Username" VerticalAlignment="Top" MinWidth="359" Width="359"
                    TextChanged="playername_TextChanged" />
        <Label
            Content="Please do note, you can only report player once. &#xD;&#xA;You can report again after restarting client"
            HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Height="86" Width="484"
            Background="{x:Null}" FontSize="22" />
        <Label Content="" Name="reportstatus" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top"
               Height="86" Width="484" Background="{x:Null}" FontSize="22" />

    </Grid>
</Page>